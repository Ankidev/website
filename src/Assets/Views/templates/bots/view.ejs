                            <div class="tags has-addons">
                                <span class="tag is-dark"><%= __("common.owner") %></span>
                                <span class="tag is-danger"><a class="has-text-white" href="<%= linkPrefix %>/users/<%= bot.owner.id %>"><%= botOwner.fullUsername %></a></span>
                            </div>
                        </div>
                    </div>
                    <% if (bot.tags && bot.tags.length > 0) { %>
                        <div class="field is-grouped is-grouped-multiline <% if (mobile) { %>is-grouped-centered<% } %>">
                            <% if (bot.tags.includes("Fun")) { %>
                                <div class="control">
                                    <p class="tag is-link">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.fun") %></span>
                                    </p>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Social")) { %>
                                <div class="control">
                                    <p class="tag is-info">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.social") %></span>
                                    </p>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Economy")) { %>
                                <div class="control">
                                    <p class="tag is-success">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.economy") %></span>
                                    </p>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Utility")) { %>
                                <div class="control">
                                    <p class="tag is-orange">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.utility") %></span>
                                    </p>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Moderation")) { %>
                                <div class="control">
                                    <span class="tag is-danger">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.moderation") %></span>
                                    </span>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Multipurpose")) { %>
                                <div class="control">
                                    <p class="tag is-magenta">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("page.bots.tag.multipurpose") %></span>
                                    </p>
                                </div>
                            <% } %>
                            <% if (bot.tags.includes("Music")) { %>
                                <div class="control">
                                    <p class="tag is-pink">
                                        <span class="icon">
                                            <i aria-hidden="true" class="fas fa-tag"></i>
                                        </span>
                                        <span><%= __("common.tags.music") %></span>
                                    </p>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
            <% if (req.user) { %>
                <% if (req.user.db.rank.mod === true) { %>
                    <% if (bot.modNotes && bot.status.approved === false) { %>
                        <div class="container">
                            <article class="message is-blurple">
                                <div class="message-header">
                                    <p class="has-text-primary"><%= __("page.bots.modNotes.view") %></p>
                                </div>
                                <div class="message-body has-background-black">
                                    <%= bot.modNotes %>
                                </div>
                            </article>
                        </div>
                        <br />
                    <% } %>
                <% } %>
            <% } %>
        </div>
    </div>
</section>
