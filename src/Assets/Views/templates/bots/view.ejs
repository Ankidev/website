                            <div class="tags has-addons">
                                <span class="tag is-dark"><%= __("page.bots.generalInfo.library.view") %></span>
                                <span class="tag is-info"><%= bot.library %></span>
                            </div>
                        </div>
                        <div class="control">
                            <div class="tags has-addons">
                                <span class="tag is-dark"><%= __("common.servers") %></span>
