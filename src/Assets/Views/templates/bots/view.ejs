                                            <span class="icon"><i class="fas fa-shield-alt"></i></span>
                                            <span><%= __("page.bots.invite.main") %></span>
                                        </a>
                                    <% } %>
                                  </div>
                                </div>
                              </div>
                        <% } %>
                        </div>
                    <% } %>
                    <div class="buttons <% if (mobile) { %>is-centered<% } %>">
                        <% if (bot.links.website) { %>
                            <a target="_blank" rel="noopener" href="<%= bot.links.website %>" class="button is-link">
                                <span class="icon">
                                    <i aria-hidden="true" class="fas fa-globe"></i>
                                </span>
                                <span><%= __("common.website") %></span>
                            </a>
                        <% } %>
                        <a target="_blank" href="<%= linkPrefix %>/bots/<%= bot._id %>/invite" class="button is-info">
                            <span class="icon">
                                <i aria-hidden="true" class="fas fa-plus"></i>
                            </span>
                            <span><%= __("common.invite") %></span>
